pipeline {
    agent any
 
    environment {
        PYTHON_VERSION = '3.10'
        VENV_DIR = 'venv'
        MYSQL_HOST = credentials('mysql-host')
        MYSQL_USER = credentials('mysql-user')
        MYSQL_PASSWORD = credentials('mysql-password')
        MYSQL_DB = credentials('mysql-db')
        JWT_SECRET_KEY = credentials('jwt-secret-key')
    }
 
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm
            }
        }
 
        stage('Setup Python Environment') {
            steps {
                echo 'Setting up Python virtual environment...'
                dir('backend/api') {
                    sh '''
                        python${PYTHON_VERSION} -m venv ${VENV_DIR}
                        . ${VENV_DIR}/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
 
        stage('Lint Code') {
            steps {
                echo 'Running code quality checks...'
                dir('backend/api') {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        pip install flake8 pylint
                        flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics --exclude=${VENV_DIR}
                        flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics --exclude=${VENV_DIR}
                    '''
                }
            }
        }
 
        stage('Run Tests') {
            steps {
                echo 'Running unit tests...'
                dir('backend/api') {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        pip install pytest-cov
                        pytest tests/ --verbose --junit-xml=test-results.xml --cov=. --cov-report=xml --cov-report=html
                    '''
                }
            }
        }
 
        stage('Code Coverage Report') {
            steps {
                echo 'Generating code coverage report...'
                dir('backend/api') {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        coverage report
                    '''
                }
            }
        }
 
        stage('Security Scan') {
            steps {
                echo 'Running security vulnerability scan...'
                dir('backend/api') {
                    sh '''
                        . ${VENV_DIR}/bin/activate
                        pip install safety bandit
                        safety check --json || true
                        bandit -r . -f json -o bandit-report.json --exclude ${VENV_DIR} || true
                    '''
                }
            }
        }
 
        stage('Build Artifact') {
            steps {
                echo 'Creating deployment artifact...'
                dir('backend') {
                    sh '''
                        tar -czf backend-${BUILD_NUMBER}.tar.gz \
                            --exclude='api/${VENV_DIR}' \
                            --exclude='api/__pycache__' \
                            --exclude='api/.pytest_cache' \
                            --exclude='api/tests' \
                            --exclude='api/.env' \
                            api/ database/
                    '''
                }
            }
        }
 
        stage('Archive Artifacts') {
            steps {
                echo 'Archiving build artifacts...'
                archiveArtifacts artifacts: 'backend/backend-*.tar.gz', fingerprint: true
                archiveArtifacts artifacts: 'backend/api/test-results.xml', allowEmptyArchive: true
                archiveArtifacts artifacts: 'backend/api/coverage.xml', allowEmptyArchive: true
                archiveArtifacts artifacts: 'backend/api/htmlcov/**/*', allowEmptyArchive: true
            }
        }
 
        stage('Publish Test Results') {
            steps {
                echo 'Publishing test results...'
                junit 'backend/api/test-results.xml'
            }
        }
 
        stage('Publish Coverage Report') {
            steps {
                echo 'Publishing coverage report...'
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'backend/api/htmlcov',
                    reportFiles: 'index.html',
                    reportName: 'Coverage Report'
                ])
            }
        }
 
        stage('Deploy to Staging') {
            when {
                branch 'develop'
            }
            steps {
                echo 'Deploying to staging environment...'
                script {
                    // Add your deployment commands here
                    // Example: SSH to staging server and deploy
                    sh '''
                        echo "Deployment to staging would happen here"
                        # scp backend-${BUILD_NUMBER}.tar.gz user@staging-server:/path/to/deploy/
                        # ssh user@staging-server "cd /path/to/deploy && tar -xzf backend-${BUILD_NUMBER}.tar.gz && systemctl restart backend"
                    '''
                }
            }
        }
 
        stage('Deploy to Production') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying to production environment...'
                input message: 'Deploy to production?', ok: 'Deploy'
                script {
                    // Add your production deployment commands here
                    sh '''
                        echo "Deployment to production would happen here"
                        # scp backend-${BUILD_NUMBER}.tar.gz user@prod-server:/path/to/deploy/
                        # ssh user@prod-server "cd /path/to/deploy && tar -xzf backend-${BUILD_NUMBER}.tar.gz && systemctl restart backend"
                    '''
                }
            }
        }
    }
 
    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo 'Pipeline completed successfully!'
            // Optionally send success notification
            // emailext subject: "Build Success: ${env.JOB_NAME} - ${env.BUILD_NUMBER}",
            //          body: "Build completed successfully",
            //          to: "team@example.com"
        }
        failure {
            echo 'Pipeline failed!'
            // Optionally send failure notification
            // emailext subject: "Build Failed: ${env.JOB_NAME} - ${env.BUILD_NUMBER}",
            //          body: "Build failed. Please check Jenkins for details.",
            //          to: "team@example.com"
        }
    }
}